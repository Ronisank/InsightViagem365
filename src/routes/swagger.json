{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "API-Viagem365",
    "description": "API para gerenciamento de locais turísticos e viagens"
  },
  "host": "localhost:3000",
  "basePath": "/",
  "schemes": [
    "http"
  ],
  "securityDefinitions": {
    "apiKeyAuth": {
      "type": "apiKey",
      "in": "header",
      "name": "authorization",
      "description": "Token de Autenticação"
    }
  },
  "paths": {
    "/users/": {
      "post": {
        "tags": [
          "User"
        ],
        "description": "Adiciona um novo usuário.",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "description": "Adiciona um novo usuário.",
            "schema": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string",
                  "example": "Fulano de Tal"
                },
                "email": {
                  "type": "string",
                  "example": "fulano@email.com"
                },
                "password": {
                  "type": "string",
                  "example": "********"
                },
                "cpf": {
                  "type": "string",
                  "example": "12345678900"
                },
                "date_of_birth": {
                  "type": "string",
                  "example": "yyyy-mm-dd"
                },
                "gender": {
                  "type": "string",
                  "example": "Male or Female"
                },
                "postal_code": {
                  "type": "string",
                  "example": "12345678"
                },
                "address": {
                  "type": "string",
                  "example": "Rua Tal, "
                }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Bad Request"
          }
        }
      }
    },
    "/destinations/": {
      "post": {
        "tags": [
          "Destinations"
        ],
        "description": "Adiciona um novo destino.",
        "parameters": [
          {
            "name": "authorization",
            "in": "header",
            "type": "string"
          },
          {
            "name": "body",
            "in": "body",
            "description": "Adiciona um novo destino, ao usuário autenticado.",
            "schema": {
              "type": "object",
              "properties": {
                "description": {
                  "type": "string",
                  "example": "Descrição do Local"
                },
                "postal_code": {
                  "type": "string",
                  "example": "00000000"
                }
              },
              "required": [
                "postal_code"
              ]
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Bad Request"
          },
          "401": {
            "description": "Unauthorized"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "get": {
        "tags": [
          "Destinations"
        ],
        "description": "Filtra todos os destinos, associados ao usuário autenticado.",
        "parameters": [
          {
            "name": "authorization",
            "in": "header",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          },
          "401": {
            "description": "Unauthorized"
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/destinations/{id}": {
      "get": {
        "tags": [
          "Destinations"
        ],
        "description": "Filtra um destino específico informado pelo ID do destino, associado ao usuário autenticado.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "authorization",
            "in": "header",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          },
          "401": {
            "description": "Unauthorized"
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "put": {
        "tags": [
          "Destinations"
        ],
        "description": "Atualiza um destino específico informado pelo usuário.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "authorization",
            "in": "header",
            "type": "string"
          },
          {
            "name": "body",
            "in": "body",
            "description": "Atualiza um destino específico informado pelo ID do destino, associado ao usuário autenticado.",
            "schema": {
              "type": "object",
              "properties": {
                "description": {
                  "type": "string",
                  "example": "Descrição do Local"
                },
                "postal_code": {
                  "type": "string",
                  "example": "00000000"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          },
          "401": {
            "description": "Unauthorized"
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "delete": {
        "tags": [
          "Destinations"
        ],
        "description": "Exclui um destino específico informado pelo ID do destino, associado ao usuário autenticado.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "authorization",
            "in": "header",
            "type": "string"
          }
        ],
        "responses": {
          "204": {
            "description": "No Content"
          },
          "400": {
            "description": "Bad Request"
          },
          "401": {
            "description": "Unauthorized"
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/login/": {
      "post": {
        "tags": [
          "Login"
        ],
        "description": "Realiza o login, com email e senha. Retorna um token de acesso.",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "description": "Realiza o login, com email e senha.",
            "schema": {
              "type": "object",
              "properties": {
                "email": {
                  "type": "string",
                  "example": "nome@email.com"
                },
                "password": {
                  "type": "string",
                  "example": "********"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          },
          "401": {
            "description": "Unauthorized"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    }
  },
  "security": [
    {
      "apiKeyAuth": []
    }
  ]
}